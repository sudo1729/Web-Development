<%-include("partials/header");-%>
<h1>Home</h1>
<p><%= startingContent %></p>

<% for(var i=0;i<posts.length;i++){%>
    <h1><%=posts[i].title%></h1>
    <% if(posts[i].content.length<=100){%>
        <p><%=posts[i].content%>.</p>
    <%}else{%>
        <p><%=posts[i].content.substring(0,100)+"..."%><a href="posts/<%= posts[i].title %>">read more</a></p>
    <%}%>
    
<%}%>

<%-include("partials/footer");-%>